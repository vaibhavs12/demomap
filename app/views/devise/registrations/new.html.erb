<div class="container">
  <center><h2> Sign Up</h2></center>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),multipart: true) do |f| %>
      <%= devise_error_messages! %>
    <div class="form-group row">
      <%= f.label :email,:class=>"col-xs-2 col-form-label" %>
      <div class="col-xs-6">
        <%= f.email_field :email, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password,:class=>"col-xs-2 col-form-label" %>
      <div class="col-xs-6">
        <%= f.password_field :password, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :password_confirmation,:class=>"col-xs-2 col-form-label" %>
      <div class="col-xs-6">
        <%= f.password_field :password_confirmation, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group row">
      <%= f.label :avatar,:class=>"col-xs-2 col-form-label" %>
      <div class="col-xs-6">
        <%= f.file_field :avatar, autofocus: true, class: 'form-control' %>
      </div>
    </div>
    <div class="actions">
      <%= f.submit "Sign up", class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
